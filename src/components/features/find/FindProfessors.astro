---
const employees = [
  {
    name: "Alice Johnson",
    email: "alice@example.com",
    office: "New York",
    phone: "+1 555-1234",
    department: "Engineering",
  },
  {
    name: "Bob Smith",
    email: "bob@example.com",
    office: "London",
    phone: "+44 20 7946 0958",
    department: "Sales",
  },
  {
    name: "Charlie Lee",
    email: "charlie@example.com",
    office: "Tokyo",
    phone: "+81 3-1234-5678",
    department: "Marketing",
  },
]
---

<div class="flex flex-col gap-4">
  <h1 class="text-2xl font-medium">Find Professors</h1>
  <div class="overflow-x-auto">
    <table class="w-full table-auto border-collapse border border-gray-300">
      <thead>
        <tr>
          <th class="border border-gray-300 p-2">Name</th>
          <th class="border border-gray-300 p-2">Email</th>
          <th class="border border-gray-300 p-2">Office</th>
          <th class="border border-gray-300 p-2">Phone</th>
          <th class="border border-gray-300 p-2">Department</th>
        </tr>
      </thead>
      <tbody>
        {employees.map((employee) => (
          <tr key={employee.email}>
            <td class="border border-gray-300 p-2">{employee.name}</td>
            <td class="border border-gray-300 p-2">{employee.email}</td>
            <td class="border border-gray-300 p-2">{employee.office}</td>
            <td class="border border-gray-300 p-2">{employee.phone}</td>
            <td class="border border-gray-300 p-2">{employee.department}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

</div>


<h1 class="text-2xl font-medium">
  Welcome to <span
    class="font-bold bg-gradient-to-r from-blue-600 via-yellow-500 to-amber-400 text-transparent bg-clip-text"
    >find</span
  >!
</h1>
